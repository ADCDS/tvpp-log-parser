doctype html
html(lang='pt')
  head
    title TVPP Log View
    style(type="text/css").
      label {
        display: block;
        font-weight: bold;
        margin: 5px;
      }

      .graph-container {
        width: 100%;
        height: 700px;
        margin: 30px;
      }

      #panelHolder {
        display: flex;
      }

      #toolbar {
        margin: 5px;
      }

      #options {
        margin: 5px;
        height: 430px;
        width: 300px;
        overflow: auto;
      }

      #infoView {
        margin: 5px;
        height: 430px;
        overflow: auto;
        text-align: right;
      }

      #controller {
        margin: 5px;
        height: 200px;
        overflow: auto;
        text-align: right;
      }

      #filterType {
        width: 300px;
        height: 100px;
      }

      #layoutType {
        width: 300px;
        height: 100px;
      }

      #machineList{
        text-align: initial;
        height: 300px;
        overflow-y: auto;
      }

      div{
        border:1px solid black;
        padding: 5px;
      }

      /* Style the tab */
      .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
      }

      /* Style the buttons inside the tab */
      .tab button {
        background-color: inherit;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        transition: 0.3s;
        font-size: 17px;
      }

      /* Change background color of buttons on hover */
      .tab button:hover {
        background-color: #ddd;
      }

      /* Create an active/current tablink class */
      .tab button.active {
        background-color: #ccc;
      }

      table, th, td {
        border: 1px solid black;
      }

      tr.active {
        background-color: #00ff0254;
      }

body
  h1 TVPP Log viewer
  div#panelHolder
    div#toolbar
      label(for='logOverlayFile') Overlay Log File
      input#logOverlayFile(type='file')
      label(for='logPerformanceFile') Performance Log File
      input#logPerformanceFile(type='file')
      label(for='FilterType') Filter Type
        br
        select#filterType(name='FilterType' size='3' required)
      label(for='layoutType') Layout Type
        br
        select#layoutType(name='topologyType' size='3' required)

    div#options
      div#filterHolder
        b Filter Options
        div#filterOptions
      br
      div#layoutHolder
        b Layout Options
        div#layoutOptions

    div#infoView
      label(for='numberOfNodes') Número de Nós:
        input(readonly=true)#numberOfNodes
      label(for='numberOfEvents') Número de Eventos:
        input(readonly=true)#numberOfEvents
      label(for='previousEvent') Evento Anterior:
        input(readonly=true, value=0)#previousEvent
      label(for='currentEvent') Evento atual:
        input(readonly=true, value=0)#currentEvent
      div#machineList
        b Machine List
        table
          thead
            tr
              td ID
              td Address
              td Type
              td Actions
          tbody#machineListTable

    div#controller
      div
        label(for='selectedEventNumber') Ir para evento:
          input#selectedEventNumber(type='number')
        input#draw(type='button', value='Go!')
        input#prevEvent(type='button', value='< Prev')
        input#nextEvent(type='button', value='Next >')
      div
        label(for='preserveCurrentLayout') Preservar Layout:
        input#preserveCurrentLayout(type='Checkbox', checked=false)


div#graphContainer
  div#graphController.tab
    button(data-graph='containerPrevious', data-sigma='sigmaPrevious').tablinks
      span Previous State
      b#previousStateEventId (NaN)
    button(data-graph='containerComparision', data-sigma='sigmaComparision').tablinks
      span Comparision State
      b#comparisionStateEventId (NaN)
    button#btnCurrentState(data-graph='containerCurrent', data-sigma='sigmaCurrent').tablinks
      span Current State
      b#currentStateEventId (NaN)

  div#containerPrevious.graph-container
  div#containerComparision.graph-container
  div#containerCurrent.graph-container
script(src='/js/bundle.js')

