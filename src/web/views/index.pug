doctype html
html(lang='pt')
  head
    title TVPP Log View
    style(type="text/css").
      label {
        display: block;
        font-weight: bold;
        margin: 5px;
      }

      #container {
        width: 100%;
        height: 700px;
        margin: 30px;
      }

      #panelHolder {
        display: flex;
      }

      #toolbar {
        margin: 5px;
      }

      #options {
        margin: 5px;
        height: 430px;
        width: 300px;
        overflow: auto;
      }

      #infoView {
        margin: 5px;
        height: 430px;
        overflow: auto;
        text-align: right;
      }

      #controller {
        margin: 5px;
        height: 200px;
        overflow: auto;
        text-align: right;
      }

      #filterType {
        width: 300px;
        height: 100px;
      }

      #layoutType {
        width: 300px;
        height: 100px;
      }

      #machineList{
        text-align: initial;
        height: 300px;
        overflow-y: auto;
      }

      div{
        border:1px solid black;
        padding: 5px;
      }
body
  h1 TVPP Log viewer
  div#panelHolder
    div#toolbar
      label(for='logOverlayFile') Overlay Log File
      input#logOverlayFile(type='file')
      label(for='logPerformanceFile') Performance Log File
      input#logPerformanceFile(type='file')
      label(for='FilterType') Filter Type
        br
        select#filterType(name='FilterType' size='3' required)
      label(for='layoutType') Layout Type
        br
        select#layoutType(name='topologyType' size='3' required)

    div#options
      div#filterHolder
        b Filter Options
        div#filterOptions
      br
      div#layoutHolder
        b Layout Options
        div#layoutOptions

    div#infoView
      label(for='numberOfNodes') Número de Nós:
        input(readonly=true)#numberOfNodes
      label(for='numberOfEvents') Número de Eventos:
        input(readonly=true)#numberOfEvents
      label(for='currentEvent') Evento atual:
        input(readonly=true, value=0)#currentEvent
      div#machineList
        b Machine List
        ul#machineListUl
    div#controller
      label(for='selectedEventNumber') Ir para evento:
        input#selectedEventNumber(type='number')
      input#draw(type='button', value='Go!')
      input#prevEvent(type='button', value='< Prev')
      input#nextEvent(type='button', value='Next >')

div#container
script(src='/js/bundle.js')

