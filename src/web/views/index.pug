doctype html
html(lang='pt')
  head
    title TVPP Log View
    style(type="text/css").
      label {
        display: block;
        font-weight: bold;
        margin: 5px;
      }

      #container {
        width: 100%;
        height: 700px;
        margin: 30px;
      }

      #panelHolder {
        display: flex;
      }

      #toolbar {
        margin: 30px;
      }

      #options {
        margin: 30px;
        height: 200px;
        overflow: auto;
      }

      #infoView {
        margin: 30px;
        height: 200px;
        overflow: auto;
        text-align: right;
      }

      #controller {
        margin: 30px;
        height: 200px;
        overflow: auto;
        text-align: right;
      }

      #filterType {
        width: 300px;
        height: 100px;
      }

      #layoutType {
        width: 300px;
        height: 100px;
      }

body
  h1 TVPP Log viewer
  div#panelHolder
    div#toolbar
      label(for='logOverlayFile') Overlay Log File
      input#logOverlayFile(type='file')
      label(for='logPerformanceFile') Performance Log File
      input#logPerformanceFile(type='file')
      label(for='FilterType') Filter Type
        br
        select#filterType(name='FilterType' size='3' required)
      label(for='layoutType') Layout Type
        br
        select#layoutType(name='topologyType' size='3' required)
      input#draw(type='button', value='Draw!')

    div#options
      div#layoutOptions
      div#filterOptions
    div#infoView
      label(for='numberOfNodes') Número de Nós:
        input(readonly=true)#numberOfNodes
      label(for='numberOfEvents') Número de Eventos:
        input(readonly=true)#numberOfEvents
      label(for='currentEvent') Evento atual:
        input(readonly=true, value=0)#currentEvent
    div#controller
      label(for='selectedEventNumber') Ir para evento:
        input#selectedEventNumber(type='number')
      input#goToEvent(type='button', value='Ir!')
      input#nextEvent(type='button', value='< Anterior')
      input#prevEvent(type='button', value='Próximo >')

div#container
script(src='/js/bundle.js')

