doctype html
html(lang='pt')
	head
		title TVPP Log View
		style(type="text/css").
			label {
				display: block;
				font-weight: bold;
				margin: 5px;
			}

			#panelHolder {
				display: flex;
			}

			#toolbar {
				margin: 5px;
			}

			div {
				border: 1px solid black;
				padding: 5px;
			}


			body {
				font: 10px sans-serif;
			}

			.axis path,
			.axis line {
				fill: none;
				stroke: #000;
				shape-rendering: crispEdges;
			}

			.line {
				fill: none;
				stroke: steelblue;
				stroke-width: 2px;
			}

			#chart {
				width: 100%;
				height: 100%;
				position: absolute;
			}


body
	h1 TVPP Log viewer
	div#panelHolder
		div#toolbar
			label(for='logFile') Overlay Log File
			input#logFile(type='file', multiple)

		div#options
			input#generateGLCButton(type='button', value='Generate Group Layer Charts')
			br
			input#generatePartnerChart(type='button', value='Generate Partner Chart')

div#chartContainer


script(src='/js/charts_gen.bundle.js')

